        <div class="search">

            <h1>Find employee by term</h1>
            <form action="/search" method="post">
                <label for="department_id">Department Id:</label>
                <!-- <input type="search" name="department_id" class="search" placeholder="write department id !">  -->
                <select class="form-select " aria-label=".form-select-lg example" id="department_id" name="department_id" >
                    <option value="0">Select Department</option>
                    <option value="1">IT Department</option>
                    <option value="2">Business Development</option>
                    <option value="3">UX/UI Department</option>
                    <option value="4">HR Department</option>
                    <option value="5">Finances Department</option>
                </select>

                <label for="employee_location">Employee Location:</label>     
                <select class="form-select " id="employee_location" name="employee_location">
                    <option value="0">Select Employee Location</option>
                    <option value="DK">DK</option>
                    <option value="USA">USA</option>
                </select>
                <br>
                <button type="submit" class="btn btn-secondary" style=" background:rgba(34, 41, 49, 0.51)">Search</button><i class="fas fa-search"></i>
                <br>
                <h5>Please enter at least one value to search</h1>
            </form>
        </div>
</div>
