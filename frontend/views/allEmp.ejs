<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
        integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
        

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="assets/overview.css">
    <link rel="stylesheet" href="assets/createEmp.css">
    <title><%= title %></title>
</head>

    <body>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="/adminPage">Profile</a>
                </li>

                <li>
                    <a href="/createEmp">Add Employee</a>
                </li>
                <li class="active">
                    <a href="/allEmp">See Employee List</a>
                </li>
                <li>
                    <a href="/searchEmp">Sreach for employee</a>
                </li>

                <li>
                    <a href="#">Leave Application</a>
                </li>
            </ul>
        </nav>
        <div id="content">
            <nav class="navbar navbar-light" style="background-color:#3b7eb9">
                <span class="navbar-brand h1" style="color: aliceblue">Employee Management System</span>
                <a href="/logout" class="btn btn-info" role="button" aria-pressed="true">Logout</a>
            </nav>
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn btn-info">
                    <span>Toggle Sidebar</span>
                </button>
                <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                </button>
            </div>
        </div>
</div>
    
    <div class="containerList">
            <h2>
                <%= title %>
            </h2>
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>employee_id</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Employee Location</th>
                    <th>Role id</th>
                    <th>Department id</th>
                    <th>Salary</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(function(employee){ %>
                    <tr>
                        <td>
                            <%= employee.employee_id %>
                        </td>
                        <td>
                            <%= employee.name %>
                        </td>
                        <td>
                            <%= employee.email %>
                        </td>
                        <td>
                            <%= employee.employee_phone %>
                        </td>
                        <td>
                            <%= employee.employee_location %>
                        </td>
                        <td>
                            <%= employee.role_id %>
                        </td>
                        <td>
                            <%= employee.department_id %>
                        </td>
                        <td>
                            <%= employee.employee_salary %>
                        </td>
                        <td>
                            <a href="updateEmp/<%= employee.employee_id %>" class="btn btn-sm btn-success">Update</a>
                        </td>
                        <td>
                            <a href="deleteEmp/<%= employee.employee_id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <script src="../public/sidebaar.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    </body>
    
    
    </html>

